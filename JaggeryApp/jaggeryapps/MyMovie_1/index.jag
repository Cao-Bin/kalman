<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
     "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
<link href="css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
<p>Tetetete</p>
<div class="container span12">
<form id="task" name="task">
<h3>Enter GeoLocations to find weather details</h3>
<br>
<input type="text" id="lat" name="lat" placeholder="Enter Latitude Eg: 12"/>
<input type="text" id="lon" name="lon" placeholder="Enter Longitude Eg: 123"/>
<input type="button" id="submitbutton" value="Submit"/>
</form>
<br/>
<h4>Results</h4>
<ul id="result" class="unstyled"></ul>


<script type="text/javascript">
$("#submitbutton").click(function(){

	var lat = document.task.lat.value;
	var lon = document.task.lon.value;

	$.get("service.jag", {lat:lat,lon:lon, action:"search"}, function(data){
		//alert(data);
			document.task.lat.value = "";
			document.task.lon.value = "";
			$("#result").prepend("<div class=\"well\">" + data + "</div>").fadeIn("slow");
		});
});


</script>

</div>
</body>


